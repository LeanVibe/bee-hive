# Development Environment Configuration
# Copy this file to .env and customize for your development environment

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Application Settings
APP_NAME="LeanVibe Agent Hive 2.0"
VERSION="2.0.0"

# Database (SQLite for development)
DATABASE_URL=sqlite:///./dev.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (separate database for development)
REDIS_URL=redis://localhost:6379/1
REDIS_CONNECTION_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=50

# Security (development keys - change in production!)
SECRET_KEY=development-secret-key
JWT_SECRET_KEY=development-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
ENCRYPTION_KEY=development-encryption-key

# API Keys (optional for development)
# ANTHROPIC_API_KEY=your-dev-anthropic-key
# OPENAI_API_KEY=your-dev-openai-key
# GEMINI_API_KEY=your-dev-gemini-key

# CLI Tool Paths (customize based on your installation)
CURSOR_CLI_PATH=cursor
GITHUB_CLI_PATH=gh
GEMINI_CLI_PATH=gemini

# Real-time Communication
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8765
REDIS_PUBSUB_ENABLED=true

# Performance Settings (development-friendly)
MAX_CONCURRENT_AGENTS=10
TASK_TIMEOUT=300
AGENT_REGISTRATION_TIMEOUT=10

# Monitoring (optional for development)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
SENTRY_DSN=""

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false