# ================================================================
# LeanVibe Agent Hive 2.0 - Production Environment Template
# ================================================================
# Copy this file to .env.production and fill in the required values
# All variables marked with ${VARIABLE} must be set for production

# ================================================================
# CORE APPLICATION SETTINGS
# ================================================================
APP_NAME=LeanVibe Agent Hive
APP_VERSION=2.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ================================================================
# REQUIRED SECURITY SECRETS (MUST BE SET)
# ================================================================
# Generate strong random keys for production:
# openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_32_CHARS_MIN
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_64_CHARS_MIN
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ================================================================
# DATABASE CREDENTIALS (MUST BE SET)  
# ================================================================
POSTGRES_DB=leanvibe_agent_hive
POSTGRES_USER=leanvibe_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_DATABASE_PASSWORD
DATABASE_URL=postgresql+asyncpg://leanvibe_user:${POSTGRES_PASSWORD}@postgres:5432/leanvibe_agent_hive

# ================================================================
# REDIS CREDENTIALS (MUST BE SET)
# ================================================================
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ================================================================
# DOMAIN AND ACCESS CONFIGURATION (MUST BE SET)
# ================================================================
DOMAIN_NAME=your-production-domain.com
ADMIN_EMAIL=admin@your-production-domain.com
SUPPORT_EMAIL=support@your-production-domain.com

# ================================================================
# AI SERVICE CONFIGURATION (MUST BE SET)
# ================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENAI_API_KEY=your-openai-api-key-here-if-needed

# ================================================================
# CORS AND SECURITY
# ================================================================
CORS_ORIGINS=https://${DOMAIN_NAME},https://www.${DOMAIN_NAME},https://app.${DOMAIN_NAME}
ALLOWED_HOSTS=${DOMAIN_NAME},www.${DOMAIN_NAME},app.${DOMAIN_NAME}

# ================================================================
# PWA CONFIGURATION
# ================================================================
PWA_NAME=LeanVibe Agent Hive
PWA_SHORT_NAME=LeanVibe
PWA_DESCRIPTION=Autonomous Development Platform
PWA_THEME_COLOR=#1f2937
PWA_BACKGROUND_COLOR=#ffffff

# ================================================================
# WEBSOCKET CONFIGURATION
# ================================================================
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=300

# ================================================================
# PERFORMANCE CONFIGURATION
# ================================================================
MAX_REQUESTS_PER_MINUTE=2000
CACHE_TTL=3600

# ================================================================
# MONITORING CREDENTIALS (MUST BE SET)
# ================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_GRAFANA_PASSWORD

# ================================================================
# FIREBASE FCM CONFIGURATION (OPTIONAL - FOR PUSH NOTIFICATIONS)
# ================================================================
# Leave blank if not using Firebase push notifications
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_CLIENT_ID=
FCM_SERVER_KEY=
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:${ADMIN_EMAIL}

# ================================================================
# BACKUP CONFIGURATION (OPTIONAL)
# ================================================================
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
CDN_URL=
STATIC_FILES_CDN=