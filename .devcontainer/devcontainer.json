{
  "name": "LeanVibe Agent Hive 2.0",
  "dockerComposeFile": ["../docker-compose.devcontainer.yml"],
  "service": "dev-environment",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  
  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "dockerDashComposeVersion": "v2",
      "installDockerBuildx": true
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true,
      "installJupyterlab": false,
      "optimize": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "nodeGypDependencies": true,
      "installYarnUsingApt": true
    }
  },
  
  // VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        // Python settings
        "python.defaultInterpreterPath": "/workspace/venv/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.banditEnabled": true,
        "python.linting.mypyEnabled": true,
        "python.linting.ruffEnabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length=100"],
        "python.sortImports.args": ["--profile", "black"],
        "python.terminal.activateEnvironment": true,
        
        // Editor settings
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true,
          "source.fixAll": true
        },
        "editor.rulers": [100],
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        
        // Files settings
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.exclude": {
          "**/__pycache__": true,
          "**/.*": false,
          "**/.git": true,
          "**/node_modules": true,
          "**/.pytest_cache": true,
          "**/.coverage": true,
          "**/htmlcov": true
        },
        
        // Terminal settings
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        
        // Docker settings
        "docker.showStartPage": false,
        
        // Git settings
        "git.autofetch": true,
        "git.enableSmartCommit": true,
        "git.confirmSync": false
      },
      
      // Extensions to install
      "extensions": [
        // Python development
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "ms-python.pylint",
        
        // Database
        "ms-ossdata.vscode-postgresql",
        "cweijan.vscode-redis-client",
        
        // Docker & containers
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        
        // Web development
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "Vue.volar",
        
        // API development
        "humao.rest-client",
        "42Crunch.vscode-openapi",
        
        // Git & version control
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "github.copilot",
        "github.copilot-chat",
        
        // Productivity
        "gruntfuggly.todo-tree",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        
        // Testing
        "ms-python.pytest",
        "ryanluker.vscode-coverage-gutters",
        
        // Performance monitoring
        "ms-vscode.vscode-performance",
        
        // Theme and UI
        "github.github-vscode-theme",
        "vscode-icons-team.vscode-icons"
      ]
    }
  },
  
  // Port forwarding
  "forwardPorts": [
    8000,  // FastAPI app
    5432,  // PostgreSQL
    6380,  // Redis
    3000,  // Frontend dev server
    5050,  // pgAdmin
    8001,  // Redis Insight
    9090,  // Prometheus
    3001,  // Grafana
    8080   // Sandbox demo
  ],
  
  // Port attributes
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Application",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL Database"
    },
    "6380": {
      "label": "Redis Cache"
    },
    "3000": {
      "label": "Frontend Development Server",
      "onAutoForward": "notify"
    },
    "5050": {
      "label": "pgAdmin Web Interface"
    },
    "8001": {
      "label": "Redis Insight"
    },
    "8080": {
      "label": "Sandbox Demo",
      "onAutoForward": "openBrowser"
    }
  },
  
  // Lifecycle scripts - Optimized for <2 minute setup
  "postCreateCommand": "/workspace/.devcontainer/post-create.sh",
  "postStartCommand": "/workspace/.devcontainer/post-start.sh",
  
  // Mount the Docker socket for Docker-in-Docker
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  
  // Environment variables - Sandbox mode enabled
  "containerEnv": {
    "WORKSPACE_FOLDER": "/workspace",
    "PYTHONPATH": "/workspace",
    "ENVIRONMENT": "development",
    "DEVCONTAINER": "true",
    "SANDBOX_MODE": "true",
    "ANTHROPIC_API_KEY": "demo_key_for_sandbox_only",
    "GITHUB_TOKEN": "demo_token_for_sandbox_only",
    "OPENAI_API_KEY": "demo_key_for_sandbox_only"
  },
  
  // Run arguments
  "runArgs": [
    "--name", "leanvibe-devcontainer",
    "--hostname", "leanvibe-dev"
  ],
  
  // User settings
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "updateRemoteUserUID": true
}