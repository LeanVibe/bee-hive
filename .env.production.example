# Production Environment Configuration
# Copy this file to .env.production and customize for your production environment

ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Application Settings
APP_NAME="LeanVibe Agent Hive 2.0"
VERSION="2.0.0"

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/leanhive_prod
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis (production instance)
REDIS_URL=redis://localhost:6379/0
REDIS_CONNECTION_POOL_SIZE=100
REDIS_MAX_CONNECTIONS=200
REDIS_CONNECTION_TIMEOUT=5.0

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY
JWT_SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-JWT-SECRET
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=CHANGE-THIS-TO-A-RANDOM-ENCRYPTION-KEY

# API Keys (required for full functionality)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# CLI Tool Paths (ensure these are installed and accessible)
CURSOR_CLI_PATH=/usr/local/bin/cursor
GITHUB_CLI_PATH=/usr/local/bin/gh
GEMINI_CLI_PATH=/usr/local/bin/gemini

# Real-time Communication
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
REDIS_PUBSUB_ENABLED=true
WEBSOCKET_COMPRESSION=deflate
WEBSOCKET_MAX_SIZE=1048576

# Performance Settings (production scale)
MAX_CONCURRENT_AGENTS=50
TASK_TIMEOUT=300
AGENT_REGISTRATION_TIMEOUT=10
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80

# Rate Limiting
RATE_LIMITING_ENABLED=true
REQUESTS_PER_MINUTE=100
BURST_SIZE=20

# Monitoring and Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
STRUCTURED_LOGGING=true
LOG_FORMAT=json

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
LOG_FAILED_ATTEMPTS=true
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=300

# Caching
CACHING_ENABLED=true
CACHE_TTL=3600
MAX_CACHE_SIZE=100MB
CACHE_COMPRESSION=true

# TLS/SSL (if using HTTPS)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_ENABLED=true

# External Service Configuration
# GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
# SLACK_BOT_TOKEN=your-slack-bot-token
# DISCORD_BOT_TOKEN=your-discord-bot-token