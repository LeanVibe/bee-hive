# LeanVibe Agent Hive 2.0 Environment Configuration

# Application
APP_NAME="LeanVibe Agent Hive 2.0"
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=leanvibe_super_secret_key_change_in_production

# Database (PostgreSQL + pgvector)
DATABASE_URL=postgresql://leanvibe_user:leanvibe_secure_pass@localhost:5432/leanvibe_agent_hive
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://:leanvibe_redis_pass@localhost:6379/0
REDIS_STREAM_MAX_LEN=10000

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Multi-Agent Configuration
MAX_CONCURRENT_AGENTS=50
AGENT_HEARTBEAT_INTERVAL=30
AGENT_TIMEOUT=300

# Context Management
CONTEXT_EMBEDDING_MODEL=text-embedding-ada-002
CONTEXT_MAX_TOKENS=8000
CONTEXT_COMPRESSION_THRESHOLD=0.8

# Sleep-Wake Cycles
SLEEP_CYCLE_INTERVAL=3600
CONSOLIDATION_THRESHOLD=0.85

# Self-Modification
SELF_MODIFICATION_ENABLED=true
SAFE_MODIFICATION_ONLY=true

# tmux Integration
TMUX_SESSION_NAME=agent-hive
TMUX_AUTO_CREATE=true

# Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# File Paths
WORKSPACE_DIR=./workspaces
LOGS_DIR=./logs
CHECKPOINTS_DIR=./checkpoints