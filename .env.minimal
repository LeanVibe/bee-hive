# Minimal working configuration for LeanVibe Agent Hive 2.0

# Application Settings
APP_NAME="LeanVibe Agent Hive"
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Required secrets (generate secure keys for production)
SECRET_KEY=development-secret-key-change-in-production-minimum-32-chars
JWT_SECRET_KEY=development-jwt-secret-key-change-in-production-minimum-64-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/agent_hive
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration  
REDIS_URL=redis://localhost:6380/0
REDIS_STREAM_MAX_LEN=10000

# AI Service Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Basic API settings
OPENAI_API_KEY=

# CORS and Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]