{
  "name": "leanvibe-mobile-pwa",
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile PWA Dashboard for LeanVibe Agent Hive 2.0",
  "author": "LeanVibe Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "generate:schemas": "npx json-schema-to-typescript -i ../schemas/ws_messages.schema.json -o src/types/ws-messages.d.ts",
    "check:schemas": "node ./scripts/check-schema-parity.mjs",
    "test:e2e": "node scripts/run-e2e-tests.js",
    "test:e2e:smoke": "node scripts/run-e2e-tests.js smoke",
    "test:e2e:full": "node scripts/run-e2e-tests.js full",
    "test:e2e:mobile": "node scripts/run-e2e-tests.js mobile",
    "test:e2e:pwa": "node scripts/run-e2e-tests.js pwa",
    "test:e2e:performance": "node scripts/run-e2e-tests.js performance",
    "test:e2e:accessibility": "node scripts/run-e2e-tests.js accessibility",
    "test:e2e:visual": "node scripts/run-e2e-tests.js visual",
    "test:e2e:agents": "node scripts/run-e2e-tests.js agents",
    "test:e2e:realtime": "node scripts/run-e2e-tests.js realtime",
    "test:e2e:headed": "node scripts/run-e2e-tests.js --headed",
    "test:e2e:debug": "node scripts/run-e2e-tests.js --debug",
    "test:e2e:update": "node scripts/run-e2e-tests.js visual --update-snapshots",
    "test:e2e:install": "playwright install --with-deps",
    "test:e2e:report": "playwright show-report",
    "test:e2e:help": "node scripts/run-e2e-tests.js --help",
    "playwright": "playwright test",
    "playwright:headed": "playwright test --headed",
    "playwright:debug": "playwright test --debug",
    "playwright:ui": "playwright test --ui",
    "playwright:report": "playwright show-report",
    "playwright:install": "playwright install",
    "test:regression": "playwright test tests/e2e/dashboard-regression.spec.ts",
    "test:regression:headed": "playwright test tests/e2e/dashboard-regression.spec.ts --headed",
    "test:regression:report": "playwright test tests/e2e/dashboard-regression.spec.ts --reporter=html",
    "test:cypress": "cypress run",
    "test:cypress:dev": "cypress open",
    "lighthouse": "lighthouse http://localhost:3001 --output json --output html --view",
    "lighthouse:pwa": "node lighthouse-pwa-audit.js",
    "pwa:validate": "npm run build && npm run preview & sleep 5 && npm run lighthouse:pwa; kill %1",
    "test:all": "npm run test && npm run test:e2e:smoke",
    "test:ci": "npm run test && npm run test:e2e:smoke --no-parallel",
    "test:local": "npm run test:e2e:smoke --headed",
    "test:comprehensive": "npm run test:e2e:full && npm run test:e2e:mobile && npm run test:e2e:performance"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.1.0",
    "@lit/context": "^1.1.0",
    "@lit/reactive-element": "^2.0.0",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chrome-launcher": "^1.2.0",
    "date-fns": "^3.6.0",
    "firebase": "^10.7.1",
    "idb": "^8.0.0",
    "jose": "^5.1.3",
    "lit": "^3.1.0",
    "proxy-from-env": "^1.1.0",
    "sortablejs": "^1.15.0",
    "web-vitals": "^5.1.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^24.1.0",
    "@types/sortablejs": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "jsdom": "^23.0.1",
    "json-schema-to-typescript": "^13.1.1",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^1.1.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
